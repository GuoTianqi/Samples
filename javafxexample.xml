<?xml version="1.0" encoding="UTF-8"?>
<project name="javafxexample" default="all">
  
  
  <property file="javafxexample.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*.yarb/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.swc"/>
    <include name="*.zip"/>
    <include name="*.egg"/>
    <include name="*.ane"/>
    <include name="*.jar"/>
    <include name="*.ear"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.7" value="${jdk.home.1.7}/bin"/>
  <path id="jdk.classpath.1.7">
    <fileset dir="${jdk.home.1.7}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/ext/access-bridge-32.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jaccess.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunmscapi.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxrt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.7}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.7}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.7"/>
  
  <!-- Modules -->
  
  
  <!-- Module JavaFxExample -->
  
  <dirname property="module.javafxexample.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.javafxexample" value="${jdk.home.1.7}"/>
  <property name="module.jdk.bin.javafxexample" value="${jdk.bin.1.7}"/>
  <property name="module.jdk.classpath.javafxexample" value="jdk.classpath.1.7"/>
  
  <property name="compiler.args.javafxexample" value="-encoding UTF-8 -source 1.7 -target 1.7 ${compiler.args}"/>
  
  <property name="javafxexample.output.dir" value="${module.javafxexample.basedir}/out/production/JavaFxExample"/>
  <property name="javafxexample.testoutput.dir" value="${module.javafxexample.basedir}/out/test/JavaFxExample"/>
  
  <path id="javafxexample.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="javafxexample.module.production.classpath">
    <path refid="${module.jdk.classpath.javafxexample}"/>
  </path>
  
  <path id="javafxexample.runtime.production.module.classpath">
    <pathelement location="${javafxexample.output.dir}"/>
  </path>
  
  <path id="javafxexample.module.classpath">
    <path refid="${module.jdk.classpath.javafxexample}"/>
    <pathelement location="${javafxexample.output.dir}"/>
  </path>
  
  <path id="javafxexample.runtime.module.classpath">
    <pathelement location="${javafxexample.testoutput.dir}"/>
    <pathelement location="${javafxexample.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.javafxexample">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.javafxexample">
    <patternset refid="excluded.from.module.javafxexample"/>
  </patternset>
  
  <path id="javafxexample.module.sourcepath">
    <dirset dir="${module.javafxexample.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.javafxexample" depends="compile.module.javafxexample.production,compile.module.javafxexample.tests" description="Compile module JavaFxExample"/>
  
  <target name="compile.module.javafxexample.production" description="Compile module JavaFxExample; production classes">
    <mkdir dir="${javafxexample.output.dir}"/>
    <javac destdir="${javafxexample.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.javafxexample}/javac">
      <compilerarg line="${compiler.args.javafxexample}"/>
      <bootclasspath refid="javafxexample.module.bootclasspath"/>
      <classpath refid="javafxexample.module.production.classpath"/>
      <src refid="javafxexample.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.javafxexample"/>
    </javac>
    
    <copy todir="${javafxexample.output.dir}">
      <fileset dir="${module.javafxexample.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.javafxexample.tests" depends="compile.module.javafxexample.production" description="compile module JavaFxExample; test classes" unless="skip.tests"/>
  
  <target name="clean.module.javafxexample" description="cleanup module">
    <delete dir="${javafxexample.output.dir}"/>
    <delete dir="${javafxexample.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.javafxexample, clean.artifact.javafxapp" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.javafxexample" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.javafxapp" value="${basedir}/out/artifacts/JavaFXApp"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="artifact.temp.output.JavaFXApp" value="${artifacts.temp.dir}/JavaFXApp.jar"/>
    <taskdef resource="com/sun/javafx/tools/ant/antlib.xml" uri="javafx:com.sun.javafx.tools.ant" classpath="${jdk.home.1.7}/lib/ant-javafx.jar"/>
  </target>
  
  <target name="clean.artifact.javafxapp" description="clean JavaFXApp artifact output">
    <delete dir="${artifact.output.javafxapp}"/>
  </target>
  
  <target name="artifact.javafxapp" depends="init.artifacts, compile.module.javafxexample" description="Build &#39;JavaFXApp&#39; artifact" xmlns:fx="javafx:com.sun.javafx.tools.ant">
    <mkdir dir="${artifact.output.javafxapp}"/>
    <copy todir="${artifact.temp.output.JavaFXApp}">
      <fileset dir="${javafxexample.output.dir}"/>
    </copy>
    <fx:fileset id="all_but_JavaFXApp" dir="${artifact.temp.output.JavaFXApp}" includes="**/*.jar">
      <exclude name="JavaFXApp.jar"/>
    </fx:fileset>
    <fx:fileset id="all_JavaFXApp" dir="${artifact.temp.output.JavaFXApp}" includes="**/*.jar"/>
    <fx:application id="JavaFXApp_id" name="JavaFXApp" mainClass="sample.Main" version="1.0.0"/>
    <fx:jar destfile="${artifact.temp.output.JavaFXApp}/JavaFXApp.jar">
      <fx:application refid="JavaFXApp_id"/>
      <fileset dir="${artifact.temp.output.JavaFXApp}" excludes="**/*.jar"/>
      <fx:resources>
        <fx:fileset refid="all_but_JavaFXApp"/>
      </fx:resources>
      <manifest>
        <attribute name="Implementation-Title" value="JavaFX"/>
        <attribute name="Implementation-Version" value="1.0.0"/>
        <attribute name="Implementation-Vendor" value="Qianyin"/>
      </manifest>
    </fx:jar>
    <condition property="app.icon.path" value="${basedir}/src/sample/launcher_48x48.ico">
      <os family="windows"/>
    </condition>
    <fx:deploy width="600" height="400" updatemode="background" outdir="${artifact.temp.output.JavaFXApp}/deploy" outfile="JavaFXApp" nativeBundles="all">
      <fx:application refid="JavaFXApp_id"/>
      <fx:info title="JavaFX" vendor="Qianyin">
        <fx:icon href="${app.icon.path}"/>
      </fx:info>
      <fx:resources>
        <fx:fileset refid="all_JavaFXApp"/>
      </fx:resources>
    </fx:deploy>
    <copy todir="${artifact.output.javafxapp}">
      <fileset dir="${artifact.temp.output.JavaFXApp}/deploy"/>
    </copy>
    <delete includeemptydirs="true">
      <fileset dir="${artifact.temp.output.JavaFXApp}"/>
    </delete>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.javafxapp" description="Build all artifacts">
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>